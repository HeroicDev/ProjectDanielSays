<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:id="@+id/first_button"
        android:background="#ff1430fc"
        android:onClick="button1Clicked"/>

    <Button
        android:id="@+id/second_button"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:layout_toRightOf="@+id/first_button"
        android:layout_marginLeft="15dp"
        android:background="#ff1430fc"
        android:onClick="button2Clicked"/>

    <Button
        android:id="@+id/third_button"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:layout_below="@+id/first_button"
        android:layout_marginTop="15dp"
        android:background="#ff1430fc"
        android:onClick="button3Clicked"/>

    <Button
        android:id="@+id/fourth_button"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:layout_below="@+id/second_button"
        android:layout_toRightOf="@+id/third_button"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="#ff1430fc"
        android:onClick="button4Clicked"/>

    <Button
        android:id="@+id/fifth_button"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:layout_below="@+id/third_button"
        android:layout_marginTop="15dp"
        android:background="#ff1430fc"
        android:onClick="button5Clicked"/>

    <Button
        android:id="@+id/sixth_button"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:layout_below="@id/fourth_button"
        android:layout_toRightOf="@id/fifth_button"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="#ff1430fc"
        android:onClick="button6Clicked"/>

    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:layout_below="@+id/sixth_button"
        android:layout_centerHorizontal="true"
        android:onClick="playGame"/>

    <Button
        android:id="@+id/pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pause"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/sixth_button"
        android:layout_toStartOf="@+id/sixth_button" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit game"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/sixth_button"
        android:layout_alignStart="@+id/sixth_button" />



</RelativeLayout>
